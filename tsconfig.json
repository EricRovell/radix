{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@util/*": [ "util/*" ],
      "@lib/*": [ "lib/*" ],
      "@lib": [ "lib/index.ts" ],
      "@/*": [ "./*" ],
      "@": [ "./index.ts" ]
    }
  },
  "include": [ "./src/**/*" ],
}