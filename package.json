{
	"name": "@ericrovell/radix",
	"version": "0.6.1",
	"description": "Radix is JavaScript library for radix transformations and manipulations.",
	"main": "index.js",
	"module": "index.mjs",
	"scripts": {
		"build": "rm -rf ./dist/* && rollup --config",
		"build:post": "cp *.json dist && cp *.md dist",
		"lint": "eslint src/**/*.ts tests/**/*.ts",
		"release:npm": "cd dist && npm publish --access public",
		"test": "vitest run --coverage",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit true"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ericrovell/radix.git"
	},
	"keywords": [
		"math",
		"numbers",
		"radix",
		"number base",
		"number radix"
	],
	"author": "Eric Rovell",
	"types": "index.d.ts",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"@vitest/coverage-c8": "^0.23.4",
		"eslint": "^8.24.0",
		"lint-staged": "^13.0.3",
		"rollup": "^2.79.1",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.34.1",
		"simple-git-hooks": "^2.8.0",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vitest": "^0.23.4"
	},
	"exports": {
		".": {
			"import": "./index.mjs",
			"require": "./index.js",
			"default": "./index.mjs"
		},
		"./package.json": "./package.json"
	},
	"homepage": "https://github.com/ericrovell/radix#readme",
	"directories": {
		"test": "tests"
	},
	"engines": {
		"node": ">=12.0"
	},
	"sideEffects": false,
	"lint-staged": {
		"*.{ts,js}": "eslint"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "pnpm run lint && pnpm run typecheck"
	}
}
